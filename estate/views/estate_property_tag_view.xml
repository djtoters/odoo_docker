<odoo>
    <!-- Vue -->
    <record id="estate_tag_view_form" model="ir.ui.view">
        <field name="name">Estate Tag</field>
        <field name="model">estate.property_estate_tag</field>
        <field name="arch" type="xml">
            <form string="Estate Tag">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_tag_view_tree" model="ir.ui.view">
        <field name="name">Estate Tag</field>
        <field name="model">estate.property_estate_tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="estate_model_tag_action" model="ir.actions.act_window">
        <field name="name">Tag</field>
        <field name="res_model">estate.property_estate_tag</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>